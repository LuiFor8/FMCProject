<body>

  <div class="form-container">
    <h1>Inserisci una Trattativa</h1>

    <label for="squadra1">La tua squadra:</label>
    <select id="squadra1">
      <option value="">-- Seleziona --</option>
      <option>Squadra A</option>
      <option>Squadra B</option>
      <option>Squadra C</option>
      <option>Squadra D</option>
    </select>

    <label for="squadra2">Squadra controparte:</label>
    <select id="squadra2">
      <option value="">-- Seleziona --</option>
      <option>Squadra A</option>
      <option>Squadra B</option>
      <option>Squadra C</option>
      <option>Squadra D</option>
    </select>

    <label for="calciatori">Calciatori oggetto di trattativa:</label>
    <textarea id="calciatori" placeholder="Es: Rossi (A), Bianchi (B)"></textarea>

    <label for="tipologia">Tipologia di trattativa:</label>
    <select id="tipologia">
      <option value="">-- Seleziona --</option>
      <option>Scambio</option>
      <option>Prestito</option>
      <option>Vendita</option>
      <option>Prestito con riscatto</option>
    </select>

    <label for="clausole">Clausole:</label>
    <textarea id="clausole" placeholder="Es: diritto di riscatto a 15 milioni"></textarea>

    <button onclick="aggiungiTrattativa()">Invia Trattativa</button>
  </div>

  <div class="table-container hidden" id="tabellaContainer">
    <h2 class="table-title">Storico Trattative</h2>
    <table>
      <thead>
        <tr>
          <th>Da</th>
          <th>A</th>
          <th>Calciatori</th>
          <th>Tipo</th>
          <th>Clausole</th>
        </tr>
      </thead>
      <tbody id="corpoTabella"></tbody>
    </table>
  </div>

  <script>
    function aggiungiTrattativa() {
      const squadra1 = document.getElementById("squadra1").value;
      const squadra2 = document.getElementById("squadra2").value;
      const calciatori = document.getElementById("calciatori").value.trim();
      const tipologia = document.getElementById("tipologia").value;
      const clausole = document.getElementById("clausole").value.trim();

      if (!squadra1 || !squadra2 || !calciatori || !tipologia) {
        alert("Compila tutti i campi obbligatori.");
        return;
      }

      const tabellaContainer = document.getElementById("tabellaContainer");
      const corpoTabella = document.getElementById("corpoTabella");

      const nuovaRiga = document.createElement("tr");
      nuovaRiga.innerHTML = `
        <td>${squadra1}</td>
        <td>${squadra2}</td>
        <td>${calciatori}</td>
        <td>${tipologia}</td>
        <td>${clausole || "-"}</td>
      `;

      corpoTabella.appendChild(nuovaRiga);
      tabellaContainer.classList.remove("hidden");

      // Pulisce i campi
      document.getElementById("squadra1").value = "";
      document.getElementById("squadra2").value = "";
      document.getElementById("calciatori").value = "";
      document.getElementById("tipologia").value = "";
      document.getElementById("clausole").value = "";
    }
  </script>

</body>
